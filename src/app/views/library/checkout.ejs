<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/styles/components/header.css">
    <link rel="stylesheet" href="/styles/components/library/checkout.css">
    <link rel="stylesheet" href="/styles/components/social-medias.css">
    <link rel="stylesheet" href="/styles/components/footer.css">

  </head>
  
  <body>
    <%- include('../includes/header.ejs') %>

    <main class="checkout">
        <section class="checkout-title-container container">
            <h2>Finalizar Compra</h2>
        </section>
        <section class="checkout-form-container container">
            <div></div>
            <form method="POST" action="/library/checkout" class="checkout-form">
                <fieldset class="checkout-form-seus-dados checkout-fieldset">
                    <h3 class="checkout-fieldset-title">
                        Seus Dados
                    </h3>

                    <div class="input-block">
                        <label class="input-label" for="name">Nome completo</label>
                        <input class="checkout-input input" type="text" id="name" name="name" required>
                    </div>

                    <div class="input-block">
                        <label class="input-label" for="email">E-mail</label>
                        <input class="checkout-input input" type="email" id="email" name="email" required>
                    </div>
                </fieldset>
                <fieldset class="checkout-form-seus-dados checkout-fieldset">
                    <h3 class="checkout-fieldset-title">
                        Dados de cobrança
                    </h3>

                    <div class="input-block">
                        <label class="input-label" for="address">Endereço</label>
                        <input class="checkout-input input" type="text" id="address" name="address" required>
                    </div>

                    <div class="input-group">
                        <div class="input-block">
                            <label class="input-label" for="city">Cidade</label>
                            <input class="checkout-input input" type="text" id="city" name="city" required>
                        </div>

                        <div class="input-block">
                            <label class="input-label" for="uf">UF</label>
                            <input class="checkout-input input" type="text" id="uf" name="uf" maxlength="2" required>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="checkout-form-seus-dados checkout-fieldset">
                    <h3 class="checkout-fieldset-title">
                        Forma de pagamento
                    </h3>
                    <div class="input-block">
                        <label class="input-label" for="card_number">Numero do cartão</label>
                        <input class="checkout-input input" type="text" id="card_number" name="card_number" required>
                    </div>

                    <div class="input-group">
                         <div class="input-block">
                            <label class="input-label" for="card_valid">Data de validade <sup>(mm/aa)</sup></label>
                            <input class="checkout-input input" type="text" id="card_valid" name="card_valid" maxlength="5" required>
                        </div>

                         <div class="input-block">
                            <label class="input-label" for="cvv">CVV <sup>(código de segurança)</sup></label>
                            <input class="checkout-input input" type="number" id="cvv" name="cvv" maxlength="3" required>
                        </div>
                    </div>
                </fieldset>
                <button type="submit" class="checkout-submit-btn button">Finalizar compra</button>
            </form>
            <div></div>
        </section>
    </main>

    <%- include('../includes/footer.ejs') %>
