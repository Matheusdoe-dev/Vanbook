<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/styles/components/header.css">
    <link rel="stylesheet" href="/styles/components/admin/add-new-book.css">
    <link rel="stylesheet" href="/styles/components/social-medias.css">
    <link rel="stylesheet" href="/styles/components/footer.css">

  </head>
  
  <body>
    <%- include('../includes/header.ejs') %>

    <main class="add-new">
        <div class="add-new-container container">
            <form class="add-new-form" action="/admin/add-new" method="POST">
              <div class="input-block">
                <label class="input-label" for="name">Nome do livro</label>
                <input class="input" type="text" name="name" id="name" required>
              </div>

              <div class="input-group">
                <div class="input-block">
                  <label class="input-label" for="author">Autor</label>
                  <input class="input" type="text" name="author" id="author" required>
                </div>
                <div class="input-block">
                  <label class="input-label" for="style">Estilo literário</label>
                  <input class="input" type="text" name="style" id="style" required>
                </div>
              </div>

              <div class="input-block">
                <label class="input-label" for="price">Preço</label>
                <input class="input" type="text" name="price" id="price" value="" required>
              </div>

              <div class="input-block">
                <label class="input-label" for="image">URL da capa</label>
                <input class="input" type="url" name="image" id="image" required>
              </div>

              <div class="button-group">
                <button type="submit" class="primary-button button">Adicionar livro</button>
                <a href="/admin" class="secondary-button button">Voltar</a>
              </div>
            </form>
        </div>
    </main>

    <%- include('../includes/footer.ejs') %>

