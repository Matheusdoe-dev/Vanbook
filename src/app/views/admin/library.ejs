<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/styles/components/header.css">
    <link rel="stylesheet" href="/styles/components/admin-livraria.css">
    <link rel="stylesheet" href="/styles/components/social-medias.css">
    <link rel="stylesheet" href="/styles/components/footer.css">

  </head>
  
  <body>
    <%- include('../includes/header.ejs') %>

    <section class="admin-livraria">
      <% if (prods.length > 0) { %>
        <div class="admin-livraria-container container">
            <section class="admin-livraria-content">
              <% for (let product of prods) { %>
                <a class="admin-livraria-card" href="/admin/books/<%= product.id %>">
                  <img class="admin-livraria-card-img" src="<%= product.image %>" alt="<%= product.name %>">
                  <div class="admin-livraria-card-info">
                    <h3 class="admin-livraria-card-info-title">
                      <%= product.name %>
                    </h3>
                    <p class="admin-livraria-card-info-price">
                      <%= product.price %>
                    </p>
                  </div>
                </a>
              <% } %>
            </section>
        </div>
      <% } else { %>
        <div class="sem-livros-container container">
            <h3 class="sem-livros-aviso">Nenhum livro foi encontrado</h3>
        </div>
      <% } %>
      
    </section>

    <%- include('../includes/footer.ejs') %>
 
